.comment_extra_info
  .comment_commenter_name #{comment.commenter.name}
  .separator
  .comment_created_at #{l comment.created_at, format: :timeline }
  .separator
  .vote_counts
    %a.show_votes.t_popover{:rel=>"popover", "data-content" => comment.like_votes.collect(&:voter).collect(&:name).join(', ') , "data-original-title"=>"Likes"}
